<% include ../partials/header.ejs %>

    <!-- Add a way to select address using button onClick and form hidden element
send address id, item id and quantity through post request -->


    <!-- <br>
    <form action="/order" method="POST">
        <button>Place order
        </button>
    </form> -->

    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    <% foundAddress.forEach(function(add){ %>
                        <br>
                        <div class="col-md-6">
                            <div class="product-image-wrapper">
                                <div class="single-products">
                                    <div class="productinfo text-center">
                                        <!-- <img src="" height="268" width="249" alt="" /> -->
                                            <%= add.fname %>
                                                <%= add.lname %>
                                        <p> <%= add.address %> </p>
                                        <p> <%= add.city %></p>
                                        <p> <%= add.state %></p>
                                        <p> <%= add.zip %> </p>
                                        <p> <%= add.phone %></p>
                                        <form action="/order/?address=<%= add.id %>" method="POST">
                                                <!-- <i class="fa fa-shopping-cart"></i> -->
                                                <input type="submit" class="btn btn-default add-to-cart" value = " Checkout at this address" name="add">                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>

                </div>

            </div>

            <div class="col-md-4 clearfix">
                <div class="bill-to">
                    <p>Enter new address</p>
                    <div class="login-form">
                        <form action="/order" method="POST">
                            <input type="text" name="fname" placeholder="First Name *" required>
                            <input type="text" name="lname" placeholder="Last Name *" required>
                            <input type="text" name="city" placeholder="Email*" required>
                            <input type="text" name="phone" placeholder="Phone *">
                            <input type="text" name="address" placeholder="Address">
                            <input type="text" name="zip" placeholder="Zip / Postal Code">
                            <input type="text" placeholder="Mobile Phone">
                            <br>   
                            <br>
                            <br>
                            <br>
                            
                            <input type="submit" class="btn btn-default add-to-cart" value = "Proceed to payment">
                        </form>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% include ../partials/footer.ejs %>